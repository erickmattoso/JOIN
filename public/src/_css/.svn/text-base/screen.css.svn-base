/* reset */
html, body { height:100%; }
body, img, h1, h2, h3, h4, ul, ol, li, dl, dt, dd, p, fieldset, input, select, form { margin:0; padding:0; }
fieldset, img, a { border:none; text-decoration:none; margin:0; padding:0; }
ul li, ol li { list-style:none; }


/* general */

body { background:#dadada url('../_img/bg_body.jpg') left top repeat-x; padding:30px 0; }
.general { border:1px solid #d6d6d6; width:1180px; background:#fff url('../_img/logo-open-brasil-2011.jpg') right bottom no-repeat; margin:0 auto 30px; }

.break { display:block; clear:both; }
.center { text-align:center; }
.mr10 { margin-right:10px; }

.button { text-decoration:none; display:block; float:left; margin:5px; background:url('../_img/spr-buttons.png') no-repeat; text-indent:-9999px; overflow:hidden; }
.normal-link { color:#d61b22; text-decoration:underline; }


#bt-voltar { background-position:-15px -14px; width:87px; height:26px; margin-top:8px; }
#bt-participar { background-position:-119px -64px; width:107px; height:32px; }
#bt-click { background-position:-15px -170px; width:209px; height:32px; float:none; margin:20px auto; }
#bt-winners { background-position:-14px -114px; width:209px; height:32px; float:none; margin:20px auto; }
#bt-go-home { background-position:-15px -66px; width:96px; height:29px; float:none; margin:20px auto; }
#bt-try-again { background-position:-112px -13px; width:116px; height:29px; float:none; margin:20px auto; }


/* form */
.form-column { float:left; width:240px;  }
.label-block { display:block; }
.input-text { margin-left:-5px; padding:0 2px; background:url('../_img/bg-input-normal.jpg') no-repeat; border:none; width:225px; height:27px; line-height:20px; font-size:13px; }

.input-checkbox {  }

textarea { resize:none; background:url('../_img/bg-textarea.jpg') no-repeat;; border:none; width:476px; overflow-y:scroll; height:78px; font-size:13px; }
select { border:1px solid #d6d6d6; }

.form-error { text-align:center; width:610px; float:right; }
.form-error span { color:#fff; background:#ff0000; }

#box-form { margin:0 0 0 -20px; width:500px; position:relative; x-index:10; }
#box-form p { margin-bottom:20px; }



#nascimento-dia,
#nascimento-mes,
#telefone-cod { width:35px; background-image:url('../_img/bg-input-small.jpg'); margin-right:4px;  }
#nascimento-ano { width:55px; background-image:url('../_img/bg-input-small-2.jpg'); }

#telefone { width:184px;  background-image:url('../_img/bg-input-medium.jpg'); }

.form-buttons { width:214px; margin:20px auto; }

.error-buttons { width:232px; margin:0 auto; }
.error-buttons a { float:left !important; margin:20px 5px !important; }


/* header */

.header {  }
#logo { display:block; width:265px; height:136px; margin:36px auto 14px; }
#logo a { display:block; width:265px; height:136px; background:url('../_img/logo.jpg') 0 0 no-repeat; text-indent:-99999px; overflow:hidden; }

/* content */
.content { width:1000px; margin:0 auto; }
.summary { width:672px; height:64px; padding:25px 0; margin:0 auto; background-image:url('../_img/bgr_summary.gif'); background-repeat:no-repeat; }
.summary h2 { text-align:center; color:#be211a; font-size:28px; font-weight:normal; letter-spacing:1px;}
.summary h2 strong { display:block; font-weight:normal; font-size:38px;  }

h3 { font-size:22px; font-weight:normal; margin-bottom:25px; }
h3 span { color:#be211a; }

.box-content { width:829px; margin:59px auto; }
.box-image-cup { width:207px; height:524px; margin:20px 34px 0 0; float:left; background:url('../_img/cup.jpg') 0 0 no-repeat; }
.box-text { font-size:13px; width:431px; float:left; background:url('../_img/box-bg.jpg') repeat-y; padding:40px 70px; position:relative; }

.box-text u { color:#c63d35; font-size:15px; }
.box-text p { margin-bottom:20px; font-size:18px; letter-spacing:1px; }

.box-border { display:block; width:571px; height:5px; position:absolute; left:0;  }
.box-border-top { top:0; background:url('../_img/box-border-top.jpg') repeat-x; }
.box-border-bottom { bottom:0; background:url('../_img/box-border-bottom.jpg') repeat-x; }

.box-corner { display:block; width:66px; height:66px; position:absolute; }
.box-left-top-corner { background:url('../_img/box-left-top-corner.jpg') no-repeat; top:-6px; left:-6px;  }
.box-right-top-corner { background:url('../_img/box-right-top-corner.jpg') no-repeat; top:-6px; right:-6px; }
.box-left-bottom-corner { background:url('../_img/box-left-bottom-corner.jpg') no-repeat; bottom:-6px; left:-6px; }
.box-right-bottom-corner { background:url('../_img/box-right-bottom-corner.jpg') no-repeat; bottom:-6px; right:-7px; }

.box-question { font-size:27px !important; text-align:center; line-height:100%; text-transform:uppercase;}
.box-question span { color:#c63d35; }
.box-question strong { font-size:46px; }

.list-bullet { margin-bottom:20px; }
.list-bullet li { background:url('../_img/spr-bullets.png') -989px 4px no-repeat; padding-left:15px; margin-bottom:10px; font-size:19px; letter-spacing:1px; }

.list-bullet-item { background:url('../_img/spr-bullets.png') 3px 2px no-repeat; padding-left:15px;  }

.box-content-info {text-align:center; font-size:12px !important;}
.box-content-info a { color:#9c9d9d; font-weight:bold; }


.scroll-pane { width:440px; height:400px; margin-bottom:20px; }
.jspVerticalBar { width:30px !important; }
.jspArrowUp { background:transparent url('../_img/scroll-arrow-up.jpg') no-repeat !important; height:25px !important; }
.jspArrowDown { background:transparent url('../_img/scroll-arrow-down.jpg') no-repeat !important; height:25px !important; }
.jspTrack { background:transparent url('../_img/scroll-bar.jpg') repeat-y !important; }
.jspDrag { background:transparent url('../_img/scroll-drag.jpg') no-repeat !important; }


/* footer */
.footer { width:1000px; margin:0 auto;  }

.footer-social-media { width:177px; height:60px; background:url('../_img/bg-invitation.jpg') no-repeat; margin:0 auto; }
.footer-social-media h4 { color:#747474; font-size:13px; font-weight:normal; text-align:center; padding:14px 0 4px; }
.footer-social-media ul { display:block; width:150px; margin:0 auto; }
.footer-social-media li { display:block; float:left; }
.footer-social-media a { display:block; text-indent:-9999px; overflow:hidden; width:14px; height:17px; margin:5px 9px; }







